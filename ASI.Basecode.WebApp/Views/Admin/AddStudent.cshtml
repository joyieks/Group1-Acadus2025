			</div>
			
			<!-- Relationship to student -->
			<div>
				<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
					Relationship to student <span style="color:#dc2626;">*</span>
				</label>
				<input type="text" name="Relationship" required 
					   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
			</div>
		</div>
	</div>
</section>

<!-- Action Buttons Section (Full Width White) -->
<section style="background:#ffffff; padding: 32px 0 40px 0;">
	<div class="container" style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
		<form method="post" action="/Admin/AddStudent">
			<div style="display:flex; justify-content:center; gap:16px;">
				<button type="button" onclick="window.location.href='/Admin/Users'" 
						style="background:#ffffff; color:#4b5563; border:1px solid #d1d5db; padding:12px 32px; border-radius:6px; cursor:pointer; font-size:14px; font-weight:600;">
					Cancel
				</button>
				<button type="submit" 
						style="background:#059669; color:#fff; border:none; padding:12px 32px; border-radius:6px; cursor:pointer; font-size:14px; font-weight:600;">
					Register
				</button>
			</div>
		</form>
	</div>
</section>

