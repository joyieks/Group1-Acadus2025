@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
    ViewData["Title"] = "Add Student";
}

<!-- Header Section -->
<section class="bg-[#E8F9E8]" style="padding: 32px 0; text-align:center;">
	<div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 16px;">
		<h1 style="font-size:28px; font-weight:800; margin:0 0 8px 0; color:#111827;">ADD A STUDENT</h1>
		<p style="margin:0; color:#4b5563; font-size:14px;">Complete the form below to register a new student</p>
	</div>
</section>

<!-- Section 1: Personal Information (Full Width White Section) -->
<section style="background:#ffffff; padding: 32px 0;">
	<div class="container" style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
		<h2 style="font-size:18px; font-weight:800; margin:0 0 24px 0; color:#111827;">Section 1: Personal Information</h2>
				
				<div style="display:grid; grid-template-columns: repeat(2, 1fr); gap:20px;">
					<!-- First name -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							First name <span style="color:#dc2626;">*</span>
						</label>
						<input type="text" name="FirstName" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
					</div>
					
					<!-- Last name -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Last name <span style="color:#dc2626;">*</span>
						</label>
						<input type="text" name="LastName" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
					</div>
					
					<!-- Middle name -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Middle name
						</label>
						<input type="text" name="MiddleName" 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
					</div>
					
					<!-- Suffix -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Suffix
						</label>
						<input type="text" name="Suffix" 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
					</div>
					
					<!-- Contact Number -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Contact Number <span style="color:#dc2626;">*</span>
						</label>
						<input type="tel" name="ContactNumber" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
					</div>
					
					<!-- Email -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Email <span style="color:#dc2626;">*</span>
						</label>
						<input type="email" name="Email" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
					</div>
				</div>
	</div>
</section>

<!-- Section 2: Student Specific Information (Full Width Green Section) -->
<section style="background:#E8F9E8; padding: 32px 0;">
	<div class="container" style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
		<h2 style="font-size:18px; font-weight:800; margin:0 0 24px 0; color:#111827;">Section 2: Student Specific Information</h2>
		
		<div style="display:grid; grid-template-columns: repeat(2, 1fr); gap:20px;">
			<!-- Year Level -->
			<div>
				<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
					Year Level <span style="color:#dc2626;">*</span>
				</label>
				<select name="YearLevel" required 
						style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					<option value="">Select Year Level</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
				</select>
			</div>
			
			<!-- Program/Course -->
			<div>
				<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
					Program/Course <span style="color:#dc2626;">*</span>
				</label>
				<select name="Program" required 
						style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					<option value="">Select Program/Course</option>
					<option value="BS Computer Science">BS Computer Science</option>
					<option value="BS Information Technology">BS Information Technology</option>
					<option value="BS Engineering">BS Engineering</option>
					<option value="BS Business Administration">BS Business Administration</option>
					<option value="BS Accountancy">BS Accountancy</option>
					<option value="BS Psychology">BS Psychology</option>
					<option value="BS Nursing">BS Nursing</option>
					<option value="BS Education">BS Education</option>
				</select>
			</div>
			
			<!-- Department (Read-only) -->
			<div style="grid-column: 1 / -1;">
				<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
					Department <span style="color:#dc2626;">*</span>
				</label>
				<input type="text" name="Department" value="Computer Science Department" readonly 
					   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#f3f4f6; color:#6b7280; box-sizing:border-box; cursor:not-allowed;">
			</div>
		</div>
	</div>
</section>

<!-- Section 3: Address Information (Full Width White Section) -->
<section style="background:#ffffff; padding: 32px 0;">
	<div class="container" style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
		<h2 style="font-size:18px; font-weight:800; margin:0 0 24px 0; color:#111827;">Section 3: Address Information</h2>
				
				<div style="display:grid; grid-template-columns: 1fr; gap:20px;">
					<!-- House/Apt number -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							House/Apt number
						</label>
						<input type="text" name="HouseNumber" 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					</div>
					
					<!-- Street name -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Street name <span style="color:#dc2626;">*</span>
						</label>
						<input type="text" name="StreetName" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					</div>
					
					<!-- Subdivision/Bldg. -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Subdivision/Bldg.
						</label>
						<input type="text" name="Subdivision" 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					</div>
				</div>
				
				<div style="display:grid; grid-template-columns: repeat(2, 1fr); gap:20px; margin-top:20px;">
					<!-- Barangay -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Barangay <span style="color:#dc2626;">*</span>
						</label>
						<input type="text" name="Barangay" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					</div>
					
					<!-- City -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							City <span style="color:#dc2626;">*</span>
						</label>
						<input type="text" name="City" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					</div>
					
					<!-- Province -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Province <span style="color:#dc2626;">*</span>
						</label>
						<input type="text" name="Province" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					</div>
					
					<!-- Zip Code -->
					<div>
						<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
							Zip Code <span style="color:#dc2626;">*</span>
						</label>
						<input type="text" name="ZipCode" required 
							   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; background:#ffffff; box-sizing:border-box;">
					</div>
				</div>
	</div>
</section>

<!-- Section 4: Emergency Contact Information (Full Width Green Section) -->
<section style="background:#E8F9E8; padding: 32px 0;">
	<div class="container" style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
		<h2 style="font-size:18px; font-weight:800; margin:0 0 24px 0; color:#111827;">Section 4: Emergency Contact Information</h2>
		
		<div style="display:grid; grid-template-columns: repeat(2, 1fr); gap:20px;">
			<!-- First name -->
			<div>
				<label style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
					First name <span style="color:#dc2626;">*</span>
				</label>
				<input type="text" name="EmergencyFirstName" required 
