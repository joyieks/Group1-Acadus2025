            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="window.history.back()">Close</button>
                <a href="@Url.Action("EditUser", "Admin", new { id = "123213" })" class="btn btn-primary" style="text-decoration:none; display:inline-block;">Edit</a>
                <button class="btn btn-danger" onclick="deactivateUser()">Deactivate</button>
            </div>
        </div>
    </div>

