@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
    ViewData["Title"] = "Add Course";
}

<!-- Backdrop Blur Overlay -->
<div class="modal-backdrop" onclick="window.history.back()"></div>

<!-- Modal Content -->
<div class="modal-container">
    <div class="modal-content">
        <!-- Header -->
        <div style="display:flex; justify-content:space-between; align-items:center; padding:24px 32px; background:#E8F9E8; border-radius:16px 16px 0 0;">
            <h1 style="font-size:24px; font-weight:800; color:#111827; margin:0;">Add New Course</h1>
            <button onclick="window.history.back()" style="background:none; border:none; cursor:pointer; color:#6b7280; font-size:24px; padding:0; width:32px; height:32px; display:flex; align-items:center; justify-content:center; border-radius:50%; transition:all 0.2s;" onmouseover="this.style.background='rgba(0,0,0,0.1)'" onmouseout="this.style.background='none'">
                ×
            </button>
        </div>

        <!-- Form Content -->
        <div style="max-height:70vh; overflow-y:auto; padding:32px;">
            <form asp-controller="Admin" asp-action="AddCourse" method="post">
                
                <!-- Course Information Section -->
                <section style="margin-bottom:32px;">
                    <h2 style="font-size:18px; font-weight:700; color:#111827; margin:0 0 20px 0; padding-bottom:12px; border-bottom:2px solid #E8F9E8;">Course Information</h2>
                    
                    <div style="display:grid; grid-template-columns:repeat(2, 1fr); gap:20px; margin-bottom:20px;">
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Course Code *</label>
                            <input type="text" name="CourseCode" placeholder="e.g., CS101" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Course Name *</label>
                            <input type="text" name="CourseName" placeholder="e.g., Introduction to Computer Science" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                    </div>

                    <div style="margin-bottom:20px;">
                        <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Course Description *</label>
                        <textarea name="Description" rows="4" placeholder="Provide a detailed description of the course..." required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px; resize:vertical;"></textarea>
                    </div>

                    <div style="display:grid; grid-template-columns:repeat(3, 1fr); gap:20px;">
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Credits *</label>
                            <input type="number" name="Credits" placeholder="3" min="1" max="6" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Department *</label>
                            <select name="Department" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;">
                                <option value="">Select Department</option>
                                <option value="Computer Science">Computer Science</option>
                                <option value="Mathematics">Mathematics</option>
                                <option value="Engineering">Engineering</option>
                                <option value="Business">Business</option>
                                <option value="Arts">Arts</option>
                                <option value="Science">Science</option>
                            </select>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Level *</label>
                            <select name="Level" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;">
                                <option value="">Select Level</option>
                                <option value="Undergraduate">Undergraduate</option>
                                <option value="Graduate">Graduate</option>
                                <option value="Doctorate">Doctorate</option>
                            </select>
                        </div>
                    </div>
                </section>

                <!-- Schedule & Capacity Section -->
                <section style="margin-bottom:32px;">
                    <h2 style="font-size:18px; font-weight:700; color:#111827; margin:0 0 20px 0; padding-bottom:12px; border-bottom:2px solid #E8F9E8;">Schedule & Capacity</h2>
                    
                    <div style="display:grid; grid-template-columns:repeat(2, 1fr); gap:20px; margin-bottom:20px;">
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Semester *</label>
                            <select name="Semester" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;">
                                <option value="">Select Semester</option>
                                <option value="Fall 2025">Fall 2025</option>
                                <option value="Spring 2026">Spring 2026</option>
                                <option value="Summer 2026">Summer 2026</option>
                            </select>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Year *</label>
                            <input type="number" name="Year" placeholder="2025" min="2025" max="2030" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                    </div>

                    <div style="display:grid; grid-template-columns:repeat(3, 1fr); gap:20px; margin-bottom:20px;">
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Days *</label>
                            <select name="Days" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;">
                                <option value="">Select Days</option>
                                <option value="MWF">Monday, Wednesday, Friday</option>
                                <option value="TTh">Tuesday, Thursday</option>
                                <option value="MW">Monday, Wednesday</option>
                                <option value="Daily">Daily</option>
                            </select>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Start Time *</label>
                            <input type="time" name="StartTime" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">End Time *</label>
                            <input type="time" name="EndTime" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                    </div>

                    <div style="display:grid; grid-template-columns:repeat(3, 1fr); gap:20px;">
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Room/Location *</label>
                            <input type="text" name="Room" placeholder="e.g., Room 301" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Max Capacity *</label>
                            <input type="number" name="MaxCapacity" placeholder="30" min="1" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Mode *</label>
                            <select name="Mode" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;">
                                <option value="">Select Mode</option>
                                <option value="In-Person">In-Person</option>
                                <option value="Online">Online</option>
                                <option value="Hybrid">Hybrid</option>
                            </select>
                        </div>
                    </div>
                </section>

                <!-- Instructor Information Section -->
                <section style="margin-bottom:32px;">
                    <h2 style="font-size:18px; font-weight:700; color:#111827; margin:0 0 20px 0; padding-bottom:12px; border-bottom:2px solid #E8F9E8;">Instructor Information</h2>
                    
                    <div style="display:grid; grid-template-columns:repeat(2, 1fr); gap:20px;">
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Primary Instructor *</label>
                            <select name="InstructorId" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;">
                                <option value="">Select Instructor</option>
                                <option value="1">Dr. John Smith - Computer Science</option>
                                <option value="2">Prof. Jane Doe - Mathematics</option>
                                <option value="3">Dr. Robert Brown - Engineering</option>
                                <option value="4">Prof. Emily Davis - Business</option>
                            </select>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Teaching Assistant (Optional)</label>
                            <select name="TAId" style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;">
                                <option value="">No TA</option>
                                <option value="5">Sarah Johnson</option>
                                <option value="6">Michael Lee</option>
                                <option value="7">Amanda White</option>
                            </select>
                        </div>
                    </div>
                </section>

                <!-- Prerequisites & Additional Info Section -->
                <section style="margin-bottom:32px;">
                    <h2 style="font-size:18px; font-weight:700; color:#111827; margin:0 0 20px 0; padding-bottom:12px; border-bottom:2px solid #E8F9E8;">Prerequisites & Additional Information</h2>
                    
                    <div style="margin-bottom:20px;">
                        <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Prerequisites (Optional)</label>
                        <textarea name="Prerequisites" rows="3" placeholder="List any prerequisite courses or requirements..." style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px; resize:vertical;"></textarea>
                    </div>

                    <div style="margin-bottom:20px;">
                        <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Learning Objectives (Optional)</label>
                        <textarea name="LearningObjectives" rows="3" placeholder="What will students learn in this course?" style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px; resize:vertical;"></textarea>
                    </div>

                    <div style="display:grid; grid-template-columns:repeat(2, 1fr); gap:20px;">
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Textbook (Optional)</label>
                            <input type="text" name="Textbook" placeholder="e.g., Introduction to Algorithms, 3rd Edition" style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;"/>
                        </div>
                        <div>
                            <label style="display:block; font-weight:600; color:#374151; margin-bottom:8px; font-size:14px;">Course Status *</label>
                            <select name="Status" required style="width:100%; padding:12px; border:1px solid #d1d5db; border-radius:8px; font-size:14px;">
                                <option value="Active">Active</option>
                                <option value="Draft">Draft</option>
                                <option value="Archived">Archived</option>
                            </select>
                        </div>
                    </div>
                </section>

            </form>
        </div>

        <!-- Footer Actions -->
        <div style="padding:20px 32px; background:#f9fafb; border-top:1px solid #e5e7eb; border-radius:0 0 16px 16px; display:flex; justify-content:flex-end; gap:12px;">
            <button onclick="window.history.back()" style="padding:12px 32px; border-radius:6px; font-size:14px; font-weight:600; cursor:pointer; background:#ffffff; color:#374151; border:2px solid #d1d5db;">
                Cancel
            </button>
            <button onclick="showSaveConfirmation()" style="padding:12px 32px; border-radius:6px; font-size:14px; font-weight:600; cursor:pointer; background:#059669; color:#ffffff; border:none; box-shadow:0 2px 4px rgba(5,150,105,0.2);">
                Create Course
            </button>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div id="confirmationModal" class="confirmation-modal">
    <div class="confirmation-box" id="confirmationBox">
        <!-- Content will be dynamically inserted -->
    </div>
</div>

<style>
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(4px);
        z-index: 9998;
    }

    .modal-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        padding: 20px;
        pointer-events: none;
    }

    .modal-content {
        background: white;
        border-radius: 16px;
        max-width: 900px;
        width: 100%;
        max-height: 90vh;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        pointer-events: auto;
        animation: modalSlideIn 0.3s ease-out;
    }

    @@keyframes modalSlideIn {
        from {
            opacity: 0;
            transform: translateY(-20px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .confirmation-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(4px);
        z-index: 10000;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .confirmation-modal.show {
        display: flex;
        opacity: 1;
    }

    .confirmation-box {
        background: white;
        border-radius: 16px;
        padding: 32px;
        max-width: 400px;
        width: 90%;
        text-align: center;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        transform: scale(0.9);
        transition: transform 0.2s ease;
    }

    .confirmation-modal.show .confirmation-box {
        transform: scale(1);
    }

    .confirmation-icon {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 32px;
        font-weight: bold;
        background: #d1fae5;
        color: #059669;
    }

    .confirmation-title {
        font-size: 20px;
        font-weight: 700;
        color: #111827;
        margin: 0 0 12px 0;
    }

    .confirmation-message {
        font-size: 14px;
        color: #6b7280;
        margin: 0 0 24px 0;
        line-height: 1.5;
    }

    .confirmation-buttons {
        display: flex;
        gap: 12px;
        justify-content: center;
    }
</style>

<script>
    function showSaveConfirmation() {
        const modal = document.getElementById('confirmationModal');
        const box = document.getElementById('confirmationBox');
        
        box.innerHTML = `
            <div class="confirmation-icon">✓</div>
            <h3 class="confirmation-title">Create Course?</h3>
            <p class="confirmation-message">Are you sure you want to create this course?</p>
            <div class="confirmation-buttons">
                <button onclick="closeConfirmation()" style="padding:10px 24px; border-radius:6px; font-size:14px; font-weight:600; cursor:pointer; background:#ffffff; color:#4b5563; border:1px solid #d1d5db;">Cancel</button>
                <button onclick="confirmSave()" style="padding:10px 24px; border-radius:6px; font-size:14px; font-weight:600; cursor:pointer; background:#059669; color:#ffffff; border:none;">Yes, Create</button>
            </div>
        `;
        
        modal.classList.add('show');
    }

    function closeConfirmation() {
        document.getElementById('confirmationModal').classList.remove('show');
    }

    function confirmSave() {
        // TODO: Implement actual save functionality
        const modal = document.getElementById('confirmationModal');
        const box = document.getElementById('confirmationBox');
        
        box.innerHTML = `
            <div class="confirmation-icon">✓</div>
            <h3 class="confirmation-title">Course Created!</h3>
            <p class="confirmation-message">The course has been created successfully.</p>
            <button onclick="window.history.back()" style="padding:10px 24px; border-radius:6px; font-size:14px; font-weight:600; cursor:pointer; background:#059669; color:#ffffff; border:none; margin-top:8px;">Close</button>
        `;
    }

    // Close on ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            const confirmModal = document.getElementById('confirmationModal');
            if (confirmModal.classList.contains('show')) {
                closeConfirmation();
            } else {
                window.history.back();
            }
        }
    });

    // Close confirmation modal when clicking outside
    document.getElementById('confirmationModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeConfirmation();
        }
    });
</script>

