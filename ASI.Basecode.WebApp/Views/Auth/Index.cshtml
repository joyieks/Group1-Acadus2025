@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Acadus - Track Your Journey";
}

<div class="min-h-screen bg-white flex flex-col items-center justify-center px-4">
    <img src="~/img/acaduslogo.png" alt="Acadus logo" class="w-56 h-56 mb-12 object-contain" />
    <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-black mb-2 font-poppins">
            Track your <span class="text-mid-color">journey</span>
        </h1>
        <h2 class="text-4xl md:text-5xl font-bold text-black mb-4 font-poppins">
