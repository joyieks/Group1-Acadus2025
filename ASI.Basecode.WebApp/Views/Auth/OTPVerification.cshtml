@model Acadus___Alliance_Project_2025.Models.OTPVerificationModel
@{
    Layout = "~/Views/Shared/_Landing.cshtml";
    ViewData["Title"] = "OTP Verification - Acadus";
}

<div class="min-h-screen bg-white flex items-center justify-center px-4">
    <div class="absolute top-6 left-6">
        <a href="/Auth/EmailVerification" class="flex items-center text-black hover:text-gray-600 transition-colors font-geologica font-bold">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to email verification
        </a>
    </div>
    
    <div class="max-w-sm w-full space-y-8">
        <div class="text-center mb-8">
            <svg class="w-12 h-12 text-green-400 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
            </svg>
        </div>

        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-black mb-2">Enter the OTP</h1>
            <p class="text-gray-600">A One-Time-Pin (OTP) has been sent to your email</p>
        </div>

        <form method="post">
            @Html.AntiForgeryToken()
            <div class="mb-6">
                <div class="flex justify-center space-x-6">
                    <input type="text" name="Otp1" maxlength="1" inputmode="numeric" pattern="[0-9]*" 
                           class="w-20 h-24 md:w-24 md:h-28 text-center text-3xl md:text-4xl font-bold bg-white border-2 border-gray-300 rounded-2xl shadow-sm focus:outline-none focus:border-mid-color otp-input caret-transparent" required>
                    <input type="text" name="Otp2" maxlength="1" inputmode="numeric" pattern="[0-9]*" 
                           class="w-20 h-24 md:w-24 md:h-28 text-center text-3xl md:text-4xl font-bold bg-white border-2 border-gray-300 rounded-2xl shadow-sm focus:outline-none focus:border-mid-color otp-input caret-transparent" required>
                    <input type="text" name="Otp3" maxlength="1" inputmode="numeric" pattern="[0-9]*" 
                           class="w-20 h-24 md:w-24 md:h-28 text-center text-3xl md:text-4xl font-bold bg-white border-2 border-gray-300 rounded-2xl shadow-sm focus:outline-none focus:border-mid-color otp-input caret-transparent" required>
                    <input type="text" name="Otp4" maxlength="1" inputmode="numeric" pattern="[0-9]*" 
                           class="w-20 h-24 md:w-24 md:h-28 text-center text-3xl md:text-4xl font-bold bg-white border-2 border-gray-300 rounded-2xl shadow-sm focus:outline-none focus:border-mid-color otp-input caret-transparent" required>
                </div>
            </div>

            <button type="submit" class="w-full py-3 px-4 border-2 border-black rounded-lg text-black font-bold hover:bg-gray-50 transition-colors font-poppins">Next</button>
        </form>

        <div class="flex justify-center mt-8 space-x-2">
            <div class="w-8 h-1 bg-gray-300 rounded"></div>
            <div class="w-8 h-1 bg-green-500 rounded"></div>
            <div class="w-8 h-1 bg-gray-300 rounded"></div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const otpInputs = document.querySelectorAll('.otp-input');
        otpInputs.forEach((input, index) => {
            input.addEventListener('input', function(e) {
                if (e.target.value.length === 1 && index < otpInputs.length - 1) {
                    otpInputs[index + 1].focus();
                }
            });
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && e.target.value === '' && index > 0) {
                    otpInputs[index - 1].focus();
                }
            });
        });
    });
 </script>




