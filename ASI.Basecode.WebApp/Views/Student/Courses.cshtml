@model ASI.Basecode.WebApp.Models.TeacherCourseViewModel[]
@{
    ViewData["Title"] = "Course Overview - Acadus";
}

<script src="https://cdn.tailwindcss.com"></script>
<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    'acadus-green': '#2d5a27',
                    'acadus-light-green': '#4a7c59'
                }
            }
        }
    }
</script>

<main class="max-w-7xl mx-auto px-4 md:px-8 pt-4 pb-12">
    <section class="text-center mb-12">
        <h1 class="text-4xl font-bold text-[#337D58] mb-2">Course Overview</h1>
        <p class="text-lg text-gray-600">Select a course to view details and track progress</p>
    </section>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center text-gray-500 text-lg mt-20">
            No courses available yet.
        </div>
    }
    else
    {
        <!-- Courses Grid -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px;">
            @foreach (var course in Model)
            {
                @await Component.InvokeAsync("CourseCard", course)
            }
        </div>
    }
</main>
