@model ASI.Basecode.WebApp.Models.StudentCoursesViewModel
@{
    ViewData["Title"] = "Course Overview - Acadus";
}

<script src="https://cdn.tailwindcss.com"></script>
<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    'acadus-green': '#2d5a27',
                    'acadus-light-green': '#4a7c59'
                }
            }
        }
    }
</script>

<main class="max-w-4xl mx-auto px-4 md:px-8 pt-4 pb-12">
    <section class="text-center mb-12">
        <h1 class="text-4xl font-bold text-[#337D58] mb-2">Course Overview</h1>
        <p class="text-lg text-gray-600">Select a course to view details and track progress</p>
    </section>

    @if (Model.Courses == null || !Model.Courses.Any())
    {
        <div class="text-center text-gray-500 text-lg mt-20">
            No courses available yet.
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
            @foreach (var course in Model.Courses)
            {
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300 cursor-pointer group">
                    <div class="@course.Color h-32 relative flex items-center justify-center">
                        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors duration-300"></div>
                        <div class="relative z-10 text-center">
                            @if (course.IsElective)
                            {
                                <div class="bg-white/20 backdrop-blur-sm rounded-full px-3 py-1 text-xs font-medium text-white mb-2">
                                    ELECTIVE
                                </div>
                            }
                            <div class="text-white text-sm font-medium opacity-80">
                                @course.Credits Credits
                            </div>
                        </div>
                    </div>

                    <div class="p-4">
                        <div class="mb-3">
                            <h3 class="font-semibold text-gray-800 text-sm mb-1 leading-tight">@course.CourseCode</h3>
                            <h4 class="font-bold text-gray-900 text-base mb-1 leading-tight">@course.CourseTitle</h4>
                            <p class="text-gray-600 text-sm">@course.Semester</p>
                        </div>

                        @if (!string.IsNullOrEmpty(course.Professor))
                        {
                            <div class="flex items-center gap-2 mt-3 pt-3 border-t border-gray-100">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <span class="text-xs text-gray-600">@course.Professor</span>
                            </div>
                        }

                        <div class="mt-4 pt-3 border-t border-gray-100">
                            <div class="flex justify-between items-center mb-1">
                                <span class="text-xs text-gray-600">Progress</span>
                                <span class="text-xs text-gray-600">@course.Progress%</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2">
                                <div class="bg-gradient-to-r from-acadus-green to-acadus-light-green h-2 rounded-full transition-all duration-500"
                                     style="width: @course.Progress%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</main>
