@model ASI.Basecode.WebApp.Models.GradebookViewModel

<!-- Search Bar -->
<div style="display: flex; align-items: center; margin-bottom: 20px; background: #f5f5f5; padding: 10px; border-radius: 8px; width: fit-content;">
    <input type="text" id="gradebookSearch" placeholder="Search students..." style="border: none; background: transparent; padding: 8px; flex: 1; outline: none;">
    <button id="searchBtn" style="background: #10B981; color: #fff; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; margin-left: 10px;">Search</button>
</div>

<!-- Gradebook Table -->
<div style="overflow-x: auto;">
    <table id="gradebookTable" class="table table-striped table-bordered" style="width: 100%; min-width: 800px;">
        <thead>
            <tr>
                <th style="background: #10B981; color: #fff;">Last Name</th>
                <th style="background: #10B981; color: #fff;">First Name</th>
                @foreach (var activity in Model.Activities)
                {
                    <th style="background: #6EE7B7; color: #000;">@activity</th>
                }
                <th style="background: #10B981; color: #fff;">Total Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.StudentGrades)
            {
                <tr>
                    <td>@student.LastName</td>
                    <td>@student.FirstName</td>
                    @foreach (var activity in Model.Activities)
                    {
                        var grade = student.ActivityGrades.ContainsKey(activity) ? student.ActivityGrades[activity] : null;
                        <td>@(grade.HasValue ? grade.Value.ToString("F2") : "-")</td>
                    }
                    <td>@(student.TotalGrade.HasValue ? student.TotalGrade.Value.ToString("F2") : "-")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
