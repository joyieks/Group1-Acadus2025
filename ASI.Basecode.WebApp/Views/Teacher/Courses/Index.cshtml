@model ASI.Basecode.WebApp.Models.TeacherCourseViewModel[]
@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
    ViewData["Title"] = "Courses";
}

<!-- Header Section -->
<section class="bg-[#E8F9E8]" style="padding: 32px 0; text-align:center;">
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 16px;">
        <h1 style="font-size:28px; font-weight:800; margin:0 0 8px 0; color:#111827;">MY COURSES</h1>
        <p style="margin:0; color:#4b5563; font-size:14px;">View and manage the courses you are handling</p>
    </div>
</section>

<!-- Main Content Section -->
<section style="background:#f9fafb; padding: 40px 0;">
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 16px;">
        <!-- Courses Grid -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px;">
            @foreach (var course in Model)
            {
                @await Component.InvokeAsync("CourseCard", course)
            }
        </div>
    </div>
</section>
