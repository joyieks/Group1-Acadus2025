@model ASI.Basecode.WebApp.Models.TeacherCourseViewModel
@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
    ViewData["Title"] = "Course Students";
}

<!-- Header Section -->
<section class="bg-[#E8F9E8]" style="padding: 32px 0; text-align:center;">
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 16px;">
        <h1 style="font-size:28px; font-weight:800; margin:0 0 8px 0; color:#111827;">COURSE STUDENTS</h1>
        <p style="margin:0; color:#4b5563; font-size:14px;">@Model.CourseTitle (@Model.CourseCode)</p>
        <a href="@Url.Action("Courses", "Teacher")" style="color:#059669; text-decoration:none; font-weight:600;">Back to Courses</a>
    </div>
</section>

<!-- Main Content Section -->
<section style="background:#f9fafb; padding: 40px 0;">
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 16px;">
        <p>Content for course students will be added here.</p>
    </div>
</section>
