@model ASI.Basecode.Services.ServiceModels.TeacherViewModel

@{
    ViewData["Title"] = "Add Teacher - Acadus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Section -->
<section class="bg-[#E8F9E8]" style="padding: 32px 0; text-align:center;">
	<div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 16px;">
		<h1 style="font-size:28px; font-weight:800; margin:0 0 8px 0; color:#111827;">ADD A TEACHER</h1>
		<p style="margin:0; color:#4b5563; font-size:14px;">Complete the form below to register a new teacher</p>
	</div>
</section>

<!-- Action Buttons Section (Full Width White) -->
<section style="background:#ffffff; padding: 32px 0 40px 0;">
	<div class="container" style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
		@if (TempData["SuccessMessage"] != null)
		{
			<div style="background:#d1fae5; color:#065f46; padding:12px 16px; border-radius:6px; margin-bottom:20px; border:1px solid #a7f3d0;">
				@TempData["SuccessMessage"]
			</div>
		}
		
		@if (!ViewData.ModelState.IsValid)
		{
			<div style="background:#fef2f2; color:#dc2626; padding:12px 16px; border-radius:6px; margin-bottom:20px; border:1px solid #fecaca;">
				@Html.ValidationSummary(true, "", new { @style = "margin:0;" })
			</div>
		}
		
		<form method="post" asp-action="AddTeacher" asp-controller="Teacher">
			@Html.AntiForgeryToken()

			<!-- Personal Information Section -->
			<div style="background:#ffffff; padding: 32px 0; margin-bottom: 20px; border: 1px solid #e5e7eb; border-radius: 8px;">
				<div style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
					<h2 style="font-size:18px; font-weight:800; margin:0 0 24px 0; color:#111827;">Section 1: Personal Information</h2>
					
					<div style="display:grid; grid-template-columns: repeat(2, 1fr); gap:20px;">
						<!-- First name -->
						<div>
							<label asp-for="FirstName" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.FirstName) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="FirstName" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="FirstName" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Last name -->
						<div>
							<label asp-for="LastName" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.LastName) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="LastName" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="LastName" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Middle name -->
						<div>
							<label asp-for="MiddleName" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.MiddleName)
							</label>
							<input asp-for="MiddleName" type="text" 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="MiddleName" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Suffix -->
						<div>
							<label asp-for="Suffix" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.Suffix)
							</label>
							<input asp-for="Suffix" type="text" 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="Suffix" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Contact Number -->
						<div>
							<label asp-for="ContactNumber" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.ContactNumber) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="ContactNumber" type="tel" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="ContactNumber" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Email -->
						<div>
							<label asp-for="Email" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.Email) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="Email" type="email" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="Email" style="color:#dc2626; font-size:12px;"></span>
						</div>
					</div>
				</div>
			</div>

			<!-- Teacher Specific Information Section -->
			<div style="background:#ffffff; padding: 32px 0; margin-bottom: 20px; border: 1px solid #e5e7eb; border-radius: 8px;">
				<div style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
					<h2 style="font-size:18px; font-weight:800; margin:0 0 24px 0; color:#111827;">Section 2: Teacher Specific Information</h2>
					
					<div style="display:grid; grid-template-columns: repeat(2, 1fr); gap:20px;">
						<!-- ID Number -->
						<div>
							<label asp-for="IdNumber" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.IdNumber)
							</label>
							<input asp-for="IdNumber" type="text" value="TCH-2025-001" readonly 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box; background-color:#f9fafb;">
							<small style="color:#6b7280; font-size:12px;">Auto-generated teacher ID</small>
							<span asp-validation-for="IdNumber" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Department -->
						<div>
							<label asp-for="Department" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.Department) <span style="color:#dc2626;">*</span>
							</label>
							<select asp-for="Department" required 
									style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box; background-color:#ffffff;">
								<option value="">Select Department</option>
								<option value="Computer Science">Computer Science</option>
								<option value="Information Technology">Information Technology</option>
								<option value="Engineering">Engineering</option>
								<option value="Business Administration">Business Administration</option>
								<option value="Education">Education</option>
								<option value="Liberal Arts">Liberal Arts</option>
							</select>
							<span asp-validation-for="Department" style="color:#dc2626; font-size:12px;"></span>
						</div>
					</div>
				</div>
			</div>

			<!-- Address Information Section -->
			<div style="background:#ffffff; padding: 32px 0; margin-bottom: 20px; border: 1px solid #e5e7eb; border-radius: 8px;">
				<div style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
					<h2 style="font-size:18px; font-weight:800; margin:0 0 24px 0; color:#111827;">Section 3: Address Information</h2>
					
					<div style="display:grid; grid-template-columns: repeat(2, 1fr); gap:20px;">
						<!-- House/Apt Number -->
						<div>
							<label asp-for="HouseNumber" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.HouseNumber)
							</label>
							<input asp-for="HouseNumber" type="text" 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="HouseNumber" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Street Name -->
						<div>
							<label asp-for="StreetName" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.StreetName) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="StreetName" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="StreetName" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Subdivision -->
						<div>
							<label asp-for="Subdivision" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.Subdivision)
							</label>
							<input asp-for="Subdivision" type="text" 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="Subdivision" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Barangay -->
						<div>
							<label asp-for="Barangay" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.Barangay) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="Barangay" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="Barangay" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- City -->
						<div>
							<label asp-for="City" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.City) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="City" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="City" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Province -->
						<div>
							<label asp-for="Province" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.Province) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="Province" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="Province" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Zip Code -->
						<div>
							<label asp-for="ZipCode" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.ZipCode) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="ZipCode" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="ZipCode" style="color:#dc2626; font-size:12px;"></span>
						</div>
					</div>
				</div>
			</div>

			<!-- Emergency Contact Information Section -->
			<div style="background:#ffffff; padding: 32px 0; margin-bottom: 20px; border: 1px solid #e5e7eb; border-radius: 8px;">
				<div style="max-width: 900px; margin: 0 auto; padding: 0 16px;">
					<h2 style="font-size:18px; font-weight:800; margin:0 0 24px 0; color:#111827;">Section 4: Emergency Contact Information</h2>
					
					<div style="display:grid; grid-template-columns: repeat(2, 1fr); gap:20px;">
						<!-- Emergency First Name -->
						<div>
							<label asp-for="EmergencyFirstName" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.EmergencyFirstName) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="EmergencyFirstName" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="EmergencyFirstName" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Emergency Last Name -->
						<div>
							<label asp-for="EmergencyLastName" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.EmergencyLastName) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="EmergencyLastName" type="text" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="EmergencyLastName" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Emergency Middle Name -->
						<div>
							<label asp-for="EmergencyMiddleName" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.EmergencyMiddleName)
							</label>
							<input asp-for="EmergencyMiddleName" type="text" 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="EmergencyMiddleName" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Emergency Suffix -->
						<div>
							<label asp-for="EmergencySuffix" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.EmergencySuffix)
							</label>
							<input asp-for="EmergencySuffix" type="text" 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="EmergencySuffix" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Emergency Contact Number -->
						<div>
							<label asp-for="EmergencyContactNumber" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.EmergencyContactNumber) <span style="color:#dc2626;">*</span>
							</label>
							<input asp-for="EmergencyContactNumber" type="tel" required 
								   style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box;">
							<span asp-validation-for="EmergencyContactNumber" style="color:#dc2626; font-size:12px;"></span>
						</div>
						
						<!-- Relationship -->
						<div>
							<label asp-for="Relationship" style="display:block; margin-bottom:6px; font-size:14px; font-weight:600; color:#111827;">
								@Html.DisplayNameFor(m => m.Relationship) <span style="color:#dc2626;">*</span>
							</label>
							<select asp-for="Relationship" required 
									style="width:100%; padding:10px 12px; border:1px solid #d1d5db; border-radius:6px; font-size:14px; box-sizing:border-box; background-color:#ffffff;">
								<option value="">Select Relationship</option>
								<option value="Spouse">Spouse</option>
								<option value="Parent">Parent</option>
								<option value="Sibling">Sibling</option>
								<option value="Child">Child</option>
								<option value="Guardian">Guardian</option>
								<option value="Friend">Friend</option>
								<option value="Other">Other</option>
							</select>
							<span asp-validation-for="Relationship" style="color:#dc2626; font-size:12px;"></span>
						</div>
					</div>
				</div>
			</div>

			<!-- Action Buttons -->
			<div style="text-align:center; margin-top:40px;">
				<button type="button" onclick="window.history.back()" 
						style="background:#6b7280; color:#ffffff; padding:12px 24px; border:none; border-radius:6px; font-size:14px; font-weight:600; margin-right:12px; cursor:pointer;">
					Cancel
				</button>
				<button type="submit" 
						style="background:#337D58; color:#ffffff; padding:12px 24px; border:none; border-radius:6px; font-size:14px; font-weight:600; cursor:pointer;">
					Register Teacher
				</button>
			</div>
		</form>
	</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
