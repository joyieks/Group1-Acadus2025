@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
    ViewData["Title"] = "Teacher Dashboard";
}

<section class="min-h-screen flex flex-col items-center justify-center bg-white">
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-4">Teacher</h1>
        <p class="text-gray-600">This is the Teacher UI placeholder.</p>
    </div>
    <div class="flex justify-center space-x-4">
        @await Component.InvokeAsync("StatisticsCard", new { title = "Ungraded Activities", value = 0, icon = "hamburger" })
        @await Component.InvokeAsync("StatisticsCard", new { title = "Upcoming Events", value = 5, icon = "calendar" })
        @await Component.InvokeAsync("StatisticsCard", new { title = "Completed Tasks", value = 10, icon = "checkmark" })
    </div>
    @section Scripts {}
</section>


