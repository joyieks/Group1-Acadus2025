{
  "Common": {
    "SetupRoot": "C:\\setup\\projects\\ASI.Basecode\\root",
    "LogFileSize": "5000000"
  },

  "Supabase": {
    "Url": "${SUPABASE_URL}",
    "AnonKey": "${SUPABASE_ANON_KEY}",
    "ServiceRoleKey": "${SUPABASE_SERVICE_ROLE_KEY}",
    "RedirectUrl": "${SUPABASE_REDIRECT_URL}"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Hangfire": "Information"
    }
  },

  "TokenAuthentication": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Audience": "AsiBasecodAudience",
    "TokenPath": "/api/token",
    "CookieName": "tkn",
    "ExpirationMinutes": "120"
  },

  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": "587",
    "SmtpUsername": "${SMTP_USERNAME}",
    "SmtpPassword": "${SMTP_PASSWORD}",
    "FromEmail": "noreply@acadus.edu",
    "FromName": "Acadus Student Management System"
  }
}
